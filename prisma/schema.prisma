generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barber {
  id        String  @id @default(uuid())
  first_name String
  last_name  String
  email     String  @unique
  phone     String?
  address   String?
  clientId  String?
}

model Client {
  id        String  @id @default(uuid())
  first_name String
  last_name  String
  email     String  @unique
  phone     String?
  address   String?
  barberId  String  @unique
}
